<section id="contact" class="contact">
	<div class="container">
		<h2>Contacto</h2>
		<div class="content">
			<div class="info">
				<div class="info-item">
					<h3>Ubicación</h3>
					<p>Plaça del Convent i la Vila, 9</p>
					<p>46240 Carlet, Valencia</p>
				</div>
				<div class="info-item">
					<h3>Contacto</h3>
					<p>Tel: 665638415</p>
				</div>
				<div class="social">
					<h3>Síguenos</h3>
					<div class="social-links">
						<a href="https://www.instagram.com/cristefeyoga/" aria-label="Instagram">Instagram</a>
					</div>
				</div>
			</div>
			<div class="map">
				<iframe
					src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d24653.87878441729!2d-0.5195634!3d39.2264449!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd61af6774032cfd:0x342f1e35af2fe01f!2sEspai+Yoga+Carlet!5e0!3m2!1ses!2ses!4v1667802332221!5m2!1sen!2ses"
					width="100%"
					height="450"
					style="border:0;"
					allowfullscreen=""
					loading="lazy"
					referrerpolicy="no-referrer-when-downgrade"
					>
				</iframe> 
			</div>
		</div>
	</div>
</section>

<style>
	.contact {
		padding: 5rem 1rem;
		background-color: #f5f6fa;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	h2 {
		text-align: center;
		color: #2d3436;
		font-size: 2.5rem;
		margin-bottom: 3rem;
	}

	.content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
	}

	.info {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.info-item h3 {
		color: #e17055;
		margin-bottom: 1rem;
		font-size: 1.5rem;
	}

	.info-item p {
		margin-bottom: 0.5rem;
	}

	.social-links {
		display: flex;
		gap: 1rem;
	}

	.social-links a {
		color: #2d3436;
		text-decoration: none;
		transition: color 0.3s;
	}

	.social-links a:hover {
		color: #e17055;
	}

	@media (max-width: 768px) {
		.content {
			grid-template-columns: 1fr;
		}
	}
</style>